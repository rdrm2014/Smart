extends layout

block content

    .container.centered
        .row
            .col-md-8.col-md-offset-2
                form(action="/users/login" method="post")
                    .form-group
                        label Username
                        input.form-control(type="text" name="username" placeholder="Username")
                    .form-group
                        label Password
                        input.form-control(type="password" name="password" placeholder="Password")
                    .form-group
                        input.form-control(type="hidden", name="callbackLink", value=callbackLink)
                    button(type="submit" class="btn btn-default") Login
                    hr
        .row
            .col-md-6.centered
                a(href="/users/signup" class="btn btn-default btn-sm" role="button") Signup
            .col-md-6.centered
                a(href="/" class="btn btn-default btn-sm" role="button") Home