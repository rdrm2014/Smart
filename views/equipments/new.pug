        // Left Column
        form(action="create" method="POST" role="form" class="new" id="form_equipment_new")
            .col-lg-6.col-md-6.col-sm-12.col-xs-12
                .row
                    // Image
                    .col-lg-12.col-md-12.col-sm-12.col-xs-12
                        .img-upload(style='padding-top: 0;')
                            .img-holder
                                img#image_equipment.img-responsive(src="/theme/images/add_equipment.png")
                            .img-controls.pull-right
                                span.btn.btn-sm.btn-default.btn-file
                                    span.glyphicon.glyphicon-open
                                    | Upload
                                //button.btn.btn-sm.btn-danger(type='button', title='Apagar imagem', onclick="deleteImage('{{ path('equipment_delete_image', { 'id': entity.id }) }}')")
                                  span.glyphicon.glyphicon-trash
                .row
