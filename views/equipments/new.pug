                    .col-lg-12.col-md-12.col-sm-12.col-xs-12
                        .form-end
                            button.btn.btn-sm.btn-default.pull-left(type='button', title='Back', onclick="navigate('../equipments')")
                                span.glyphicon.glyphicon-chevron-left
