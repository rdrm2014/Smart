extends ../layout-home
block content
    .container
        .row
            .col-md-12
                h3 sensor Listing
        .row
            .col-md-12
                if sensors
                    table(class='table table-hover table-condensed')
                        tr
                            th Name
                            th Description
                            th Data Type
                            th Chart Type
                            th
                            th
                            th
                        each sensor in sensors
                            tr(data-id=sensor.id data-model="sensor")
                                td #{sensor.name}
                                td #{sensor.description}
                                td #{sensor.dataType}
                                td #{sensor.chartType}
                                td
                                    a(href="sensors/"+sensor.id  class="btn btn-primary btn-sm" role="button") Show
                                td
                                    a(href="sensors/"+sensor.id+"/edit"  class="btn btn-primary btn-sm" role="button") Edit
                                td
                                    form(action="sensors/"+sensor.id+"/destroy" method="POST")
                                        //input(type="hidden" name="_method" value="delete")
                                        input(type="hidden" name="id" value=sensor.id)
                                        input(type="submit" value="Delete"  class="btn btn-danger btn-sm" role="button")

        .row
            .col-md-12
                a(href="sensors/new" class="btn btn-success btn-sm" role="button") New

        hr
